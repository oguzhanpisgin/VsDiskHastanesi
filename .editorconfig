root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ps1]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 4
max_line_length = off

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2

[*.cs]
indent_style = space
indent_size = 4
